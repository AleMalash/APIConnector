                android:textSize="@dimen/view_words_left"
                />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_right_linear_damage_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="7"
                android:textSize="@dimen/view_words_left"
                />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_right_linear_avg_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="8"
                android:textSize="@dimen/view_words_left"
                />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_right_linear_percent_survived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="9"
                android:textSize="@dimen/view_words_left"
                />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_right_linear_frags_factor"
