<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
//merge
        <LinearLayout
            android:id="@+id/view_left_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_nickname"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_registered"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_battles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_battles"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_rating"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_percent_win_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_percent_win"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_percent_hits_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_percent_hits_deal"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_damage_factor"
