                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_damage_factor"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_avg_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_avg_damage"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_percent_survived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
