                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_max_damage"
                android:textSize="@dimen/view_words_left"
            />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/view_right_linear"
            android:layout_toEndOf="@id/view_left_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_right_linear_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="1"
                android:textSize="@dimen/view_words_left"
                />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_right_linear_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="2"
                android:textSize="@dimen/view_words_left"
                />


            <TextView
