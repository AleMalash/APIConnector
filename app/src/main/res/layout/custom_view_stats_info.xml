            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_frags_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_frags_factor"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_max_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_standard_margin_left"
                android:layout_marginTop="@dimen/view_standard_margin_top"
                android:text="@string/view_max_exp"
                android:textSize="@dimen/view_words_left"
            />

            <TextView
                android:textColor="#FFDEAD"
                android:id="@+id/view_left_linear_avg_exp"
